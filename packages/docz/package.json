{
  "name": "docz",
  "version": "2.4.0",
  "description": "It's has never been so easy to documents your things!",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/doczjs/docz.git",
    "directory": "packages/docz"
  },
  "bin": {
    "docz": "./dist/bin.js"
  },
  "main": "src/index.ts",
  "publishConfig": {
    "access": "public",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "typings": "./dist/index.d.ts",
    "exports": {
      ".": {
        "require": "./dist/index.js",
        "default": "./dist/index.mjs"
      }
    },
    "files": [
      "bin/",
      "dist/",
      "package.json",
      "README.md"
    ]
  },
  "scripts": {
    "build": "tsup --dts",
    "build:watch": "tsup --dts --watch"
  },
  "dependencies": {
    "@docz/core": "workspace:*",
    "@mdx-js/loader": "^2.1.3",
    "@mdx-js/react": "^2.1.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.19",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  }
}
