  },
  "homepage": "https://docz.site",
  "bugs": {
    "url": "https://github.com/pedronauck/docz/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pedronauck/docz.git"
  },
  "scripts": {
    "clean": "lerna clean",
    "bs": "lerna bootstrap",
    "packages": "run-s packages:*",
    "packages:fix": "lerna run --parallel fix && echo",
    "packages:lint": "lerna run --parallel tslint",
    "packages:build": "lerna run build --ignore docz-example-*",
    "prerelease": "yarn run packages",
    "release": "lerna publish --conventional-commits",
    "release:beta": "yarn release --npm-tag=beta --preid=beta",
    "release:canary": "yarn release --canary --force-publish=\"*\" --canary --exact --yes --npm-client npm",
    "precommit": "lint-staged",
    "commit": "git-cz",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@commitlint/cli": "^7.5.0",
    "@commitlint/config-conventional": "^7.5.0",
    "@commitlint/config-lerna-scopes": "^7.5.0",
    "@emotion/babel-preset-css-prop": "^10.0.7",
    "@types/find-up": "^2.1.1",
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^24.0.0",
    "@types/lodash": "^4.14.120",
    "@types/lodash.flatten": "^4.4.4",
    "@types/lodash.flattendepth": "^4.7.4",
    "@types/lodash.get": "^4.4.4",
    "@types/node": "^10.12.21",
    "@types/prettier": "^1.15.2",
    "@types/react": "^16.8.1",
    "@types/react-dom": "^16.0.11",
    "@types/react-router-dom": "^4.3.1",
    "all-contributors-cli": "^5.11.0",
    "babel-plugin-lodash": "^3.3.4",
    "babel-preset-react-app": "^7.0.0",
    "commitizen": "^3.0.5",
    "cross-env": "^5.2.0",
    "docz-rollup": "0.13.3",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lerna": "3.10.8",
    "lint-staged": "^8.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "rollup": "^1.1.2",
    "trash-cli": "^1.4.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.1"
  },
  "workspaces": [
    "core/*",
    "examples/*",
    "other-packages/*"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,mdx}": [
      "yarn packages:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn packages:lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
